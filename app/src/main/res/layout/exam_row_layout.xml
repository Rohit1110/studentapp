<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"




    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/examshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#212121"
        android:text="Exam Name"

        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
    <TextView
        android:id="@+id/examdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/examshow"
        android:textColor="#757575"
        android:text="Exam Date"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/examdate"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/omrshow"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:shadowColor="@color/colorPrimary"
            android:text="OMR Sheet" />

        <Button
            android:id="@+id/psolshow"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_weight="0.6"

            android:baselineAligned="false"
            android:text="Paper Solution" />

        <Button
            android:id="@+id/btnanalysis"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:text="OMR Analysis" />

        <Button
            android:id="@+id/btncorrectkey"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.8"
            android:text="Question analysis" />

    </LinearLayout>


   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        />-->
</RelativeLayout>
